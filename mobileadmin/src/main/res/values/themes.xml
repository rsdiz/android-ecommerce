<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RDSHOP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_wood</item>
        <item name="colorPrimaryVariant">@color/black_pearl</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hippie_blue</item>
        <item name="colorSecondaryVariant">@color/chathams_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/alto</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnBackgroundDarker">@color/mine_shaft</item>
        <item name="iconColorLight">@color/white</item>
        <item name="iconColorDark">@color/mine_shaft</item>
    </style>

    <style name="Theme.RDSHOP.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_wood</item>
        <item name="colorPrimaryVariant">@color/black_pearl</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hippie_blue</item>
        <item name="colorSecondaryVariant">@color/chathams_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/alto</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnBackgroundDarker">@color/mine_shaft</item>
        <item name="iconColorLight">@color/white</item>
        <item name="iconColorDark">@color/mine_shaft</item>
    </style>

    <style name="Theme.RDSHOP.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <attr name="colorBackground" />
    <attr name="colorOnBackground" />
    <attr name="colorOnBackgroundDarker" />
    <attr name="iconColorLight" />
    <attr name="iconColorDark" />
</resources>