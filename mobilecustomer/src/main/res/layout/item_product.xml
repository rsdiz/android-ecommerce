<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?attr/colorBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/margin_padding_size_small"
    android:paddingVertical="@dimen/margin_padding_size_micro">

    <TextView
        android:id="@+id/text_number"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas_neue"
        android:lines="1"
        android:paddingVertical="@dimen/margin_padding_size_micro"
        android:text="1"
        android:textAlignment="center"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/capriola"
        android:lines="1"
        android:paddingVertical="@dimen/margin_padding_size_micro"
        android:text="Product Name"
        android:textAlignment="viewStart"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_product_qty"
        app:layout_constraintStart_toEndOf="@id/text_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_product_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/capriola"
        android:lines="1"
        android:paddingVertical="@dimen/margin_padding_size_micro"
        android:text="QTY"
        android:textAlignment="center"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_product_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="50dp" />

    <TextView
        android:id="@+id/text_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/capriola"
        android:lines="1"
        android:paddingVertical="@dimen/margin_padding_size_micro"
        android:text="Rp.5000"
        android:textAlignment="viewEnd"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="120dp" />

</androidx.constraintlayout.widget.ConstraintLayout>